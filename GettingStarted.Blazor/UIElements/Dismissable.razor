@if (Message is not null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <strong>Oops!</strong> @Message
        <button type="button" class="btn-close" aria-label="Close" @onclick="OnClick"></button>
    </div>
}

@code {

    [Parameter]
    public string? Message { set; get; }

    [Parameter]
    public EventCallback OnDismissClick{ set; get; }

    private async Task OnClick()
    {
        await OnDismissClick.InvokeAsync();
    }
}
